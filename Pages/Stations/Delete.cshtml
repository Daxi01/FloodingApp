@page
@model FloodingApp.Pages.Stations.DeleteModel
@{
    ViewData["Title"] = "Delete Station";
}

<h2>Delete Station</h2>

<h3>Are you sure you want to delete this station?</h3>
<div>
    <h4>Station</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.FloodWarningValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.FloodWarningValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.DroughtWarningValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.DroughtWarningValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.TimeToleranceInMin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.TimeToleranceInMin)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Station.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
