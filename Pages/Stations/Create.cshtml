@page
@model FloodingApp.Pages.Stations.CreateModel

<h2>Create Station</h2>

<form method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Station.Title"></label>
        <input asp-for="Station.Title" class="form-control" />
        <span asp-validation-for="Station.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Station.FloodWarningValue"></label>
        <input asp-for="Station.FloodWarningValue" class="form-control" />
        <span asp-validation-for="Station.FloodWarningValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Station.DroughtWarningValue"></label>
        <input asp-for="Station.DroughtWarningValue" class="form-control" />
        <span asp-validation-for="Station.DroughtWarningValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Station.TimeToleranceInMin"></label>
        <input asp-for="Station.TimeToleranceInMin" class="form-control" />
        <span asp-validation-for="Station.TimeToleranceInMin" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.querySelector('form');
            form.addEventListener('submit', function (event) {
                const floodWarningValue = parseFloat(document.querySelector('[name="Station.FloodWarningValue"]').value);
                const droughtWarningValue = parseFloat(document.querySelector('[name="Station.DroughtWarningValue"]').value);
                let valid = true;

                if (floodWarningValue < 1 || floodWarningValue > 10) {
                    valid = false;
                    alert("Flood Warning Value must be between 1 and 10.");
                }

                if (droughtWarningValue < 1 || droughtWarningValue > 10) {
                    valid = false;
                    alert("Drought Warning Value must be between 1 and 10.");
                }

                if (!valid) {
                    event.preventDefault();
                }
            });
        });
    </script>
}
