@page "{id:int}"
@model FloodingApp.Pages.Stations.EditModel
@{
    ViewData["Title"] = "Edit Station";
}

<h2>Edit Station</h2>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Station.Id" /> 
    <div class="form-group">
        <label asp-for="Station.Title"></label>
        <input asp-for="Station.Title" class="form-control" />
        <span asp-validation-for="Station.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Station.FloodWarningValue"></label>
        <input asp-for="Station.FloodWarningValue" class="form-control" />
        <span asp-validation-for="Station.FloodWarningValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Station.DroughtWarningValue"></label>
        <input asp-for="Station.DroughtWarningValue" class="form-control" />
        <span asp-validation-for="Station.DroughtWarningValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Station.TimeToleranceInMin"></label>
        <input asp-for="Station.TimeToleranceInMin" class="form-control" />
        <span asp-validation-for="Station.TimeToleranceInMin" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Station.CreatedByUser" value="system" /> 
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
